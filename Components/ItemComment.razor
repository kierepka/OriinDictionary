<ListGroupItem>
    <Field Horizontal="true" Padding="Padding.IsAuto.OnAll">
        <FieldBody ColumnSize="ColumnSize.Is2">
            @if (MyComment is not null)
            {
                @MyComment.Date.ToString("MM/dd/yyyy HH:mm");
            }
        </FieldBody>
        <FieldBody ColumnSize="ColumnSize.Is2">
            @if (MyComment is not null)
            {
                @MyComment.User.UserName
            }
        </FieldBody>
        <FieldBody ColumnSize="ColumnSize.Is9">
            @if (MyComment != null)
            {
                @MyComment.Text
            }
        </FieldBody>
    </Field>
</ListGroupItem>