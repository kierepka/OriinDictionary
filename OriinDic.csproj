<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">
	<PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<nullable>enable</nullable>
		<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
		<I18nTextFallBackLanguage>pl</I18nTextFallBackLanguage>
		<Configurations>Debug;Release;DebugLocal;Docker</Configurations>
		<AnalysisLevel>latest</AnalysisLevel>
		<EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Blazored.LocalStorage" Version="3.0.0" />
		<PackageReference Include="Blazorise" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.Bulma" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.Components" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.DataGrid" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.Icons.FontAwesome" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.Sidebar" Version="0.9.2.5" />
		<PackageReference Include="Blazorise.Snackbar" Version="0.9.2.5" />

		<PackageReference Include="Fluxor.Blazor.Web.ReduxDevTools" Version="4.0.0" />
		
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.3" />		
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.3" PrivateAssets="all" />
    
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="5.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="5.0.3" />
		
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
		
    <PackageReference Include="Radzen.Blazor" Version="3.0.10" />
		<PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
		
		<PackageReference Include="Toolbelt.Blazor.I18nText" Version="9.4.0" />
		<PackageReference Include="Toolbelt.Blazor.SpeechRecognition" Version="0.0.4.6-alpha" />
		<PackageReference Include="Toolbelt.Blazor.SpeechSynthesis" Version="8.1.0" />
	</ItemGroup>
	<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>


</Project>